{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "LifeInWeeks",
  "version": "0.1.0",
  "identifier": "com.lifeinweeks.desktop",
  "build": {
    "frontendDist": "../tauri-app/src",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "",
    "beforeBuildCommand": ""
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Life in Weeks",
        "width": 800,
        "height": 700,
        "resizable": true,
        "center": true,
        "decorations": true,
        "minWidth": 600,
        "minHeight": 500
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
